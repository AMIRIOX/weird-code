#!/bin/bash

# Create AutoCompile.sh
echo -e "#!/bin/bash" > ../AutoCompile.sh
chmod 777 AutoCompile.sh

# Check Command Lines
if [ `expr $# % 3` -ne 1 ]; then
    echo "Usage Error!" >&2
fi

# Many Langs and Compilers
while [ -n "${1}" ]; do
# Follow These Rules:
# 1. Compiler
# 2. Files
# 3. Command Lines
    compiler="${1}"
    shift 1 # It means right-move the Command Line.
    files="${1}"
    shift 1
    commandline="${1}"
    shift 1
    for i in $files; do # Many Files
    	echo "$compiler $commandline $i" >> ../AutoCompile.sh
    done
done;
